<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ConditionsActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#fff"
        >
        <ImageView
            android:id="@+id/headtrait"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/common_button_collection_large_n"
            />
        <TextView
            android:id="@+id/disease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_________"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            />
        <ImageView
            android:id="@+id/information"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/common_nav_message_black_n"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <TextView
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="张三"
           android:textSize="14sp"
           android:textColor="#3087ea"
           android:layout_marginTop="12dp"
           android:layout_marginLeft="20dp"
           />
       <TextView
           android:id="@+id/bing"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="[病症]"
           android:textSize="12sp"
           android:textColor="#3087ea"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_below="@+id/name"
           />
       <TextView
           android:id="@+id/illness"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="_______"
           android:textSize="12sp"
           android:textColor="#000"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_below="@+id/bing"
           />
       <TextView
           android:id="@+id/ke"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="[科室]"
           android:textSize="12sp"
           android:textColor="#3087ea"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_below="@+id/illness"
           />
       <TextView
           android:id="@+id/admini"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="_______"
           android:textSize="12sp"
           android:textColor="#000"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_below="@+id/ke"
           />
       <TextView
           android:id="@+id/details"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="[病症详情]"
           android:textSize="12sp"
           android:textColor="#3087ea"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_below="@+id/admini"
           />
       <TextView
           android:id="@+id/sickness"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="_______"
           android:textSize="12sp"
           android:textColor="#000"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_below="@+id/details"
           android:layout_marginRight="20dp"
           />
       <TextView
           android:id="@+id/experience"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="[治疗经历]"
           android:textSize="12sp"
           android:textColor="#3087ea"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_below="@+id/sickness"
           />
       <TextView
           android:id="@+id/hospitalname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="_______"
           android:textSize="12sp"
           android:textColor="#000"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_below="@+id/experience"
           android:layout_marginRight="20dp"
           />
       <TextView
           android:id="@+id/timeoftherapy"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="_______"
           android:textSize="12sp"
           android:textColor="#000"
           android:layout_marginTop="20dp"
           android:layout_below="@+id/experience"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
           />
       <TextView
           android:id="@+id/treatment"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="_______"
           android:textSize="12sp"
           android:textColor="#000"
           android:layout_marginTop="6dp"
           android:layout_marginLeft="20dp"
           android:layout_below="@+id/hospitalname"
           android:layout_marginRight="20dp"
           />
       <TextView
           android:id="@+id/relatedpictures"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="[相关图片]"
           android:textSize="12sp"
           android:textColor="#3087ea"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_below="@+id/treatment"
           />
       <com.facebook.drawee.view.SimpleDraweeView
           android:id="@+id/picture"
           android:layout_width="320dp"
           android:layout_height="144dp"
           android:layout_marginTop="20dp"
           android:layout_below="@+id/relatedpictures"
           android:layout_centerHorizontal="true"
           />
       <ImageView
           android:id="@+id/xing"
           android:layout_width="24dp"
           android:layout_height="24dp"
           android:src="@drawable/common_button_collection_large_n"
           android:layout_below="@+id/picture"
           android:layout_alignParentRight="true"
           android:layout_marginRight="150dp"
           android:layout_marginTop="18dp"
           />
       <TextView
           android:id="@+id/collect"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="15sp"
           android:text="_______"
           android:textColor="#333333"
           android:layout_below="@+id/picture"
           android:layout_marginTop="18dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="125dp"
           />
       <ImageView
           android:id="@+id/news"
           android:layout_width="24dp"
           android:layout_height="24dp"
           android:src="@drawable/common_icon_comment_large_n"
           android:layout_below="@+id/picture"
           android:layout_marginTop="18dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="60dp"
           />
       <TextView
           android:id="@+id/suggest"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="15sp"
           android:text="_______"
           android:textColor="#333333"
           android:layout_alignParentRight="true"
           android:layout_marginRight="40dp"
           android:layout_below="@+id/picture"
           android:layout_marginTop="18dp"
           />
       <View
           android:id="@+id/xian"
           android:layout_width="4dp"
           android:layout_height="20dp"
           android:background="#3087ea"
           android:layout_below="@+id/picture"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="60dp"
           />
       <TextView
           android:id="@+id/accept"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="被采纳的建议"
           android:textSize="12sp"
           android:textColor="#333333"
           android:layout_marginTop="60dp"
           android:layout_below="@+id/picture"
           android:layout_toRightOf="@+id/xian"
           android:layout_marginLeft="10dp"
           />
       <ImageView
           android:id="@+id/useravatar"
           android:layout_width="32dp"
           android:layout_height="32dp"
           android:layout_marginLeft="20dp"
           android:layout_below="@+id/accept"
           android:layout_marginTop="20dp"
           />
       <TextView
           android:id="@+id/theusernickname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="________"
           android:textSize="14sp"
           android:textColor="#333333"
           android:layout_toRightOf="@+id/useravatar"
           android:layout_below="@+id/accept"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="10dp"
           />
       <TextView
           android:id="@+id/takethetime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="________"
           android:textSize="12sp"
           android:textColor="#333333"
           android:layout_below="@+id/accept"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="10dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
           />
       <TextView
           android:id="@+id/taketheadvice"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="________"
           android:textSize="14sp"
           android:textColor="#333333"
           android:layout_below="@+id/theusernickname"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           />
   </RelativeLayout>
</LinearLayout>