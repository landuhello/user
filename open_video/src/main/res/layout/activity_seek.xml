<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dingtao.rrmmp.activity.SeekActivity"
    >
    <ImageView
        android:id="@+id/quit"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@drawable/common_icon_back_black_n"
        />
    <EditText
        android:id="@+id/edit_sosuo"
        android:layout_width="@dimen/dp_210"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_style"
        android:textColor="#000"
        android:paddingLeft="@dimen/dp_10"
        android:hint="请输入病情或科室"
        android:textSize="15dp"
        />
    <Button
        android:id="@+id/thesearchbutton"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_25"
        android:text="搜索"
        android:textSize="15sp"
        android:background="@drawable/but_style"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_60"
        >
    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>
