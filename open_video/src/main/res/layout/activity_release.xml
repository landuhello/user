<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context="com.dingtao.rrmmp.activity.ReleaseActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:background="#fff"
        >
        <ImageView
            android:id="@+id/headportrait"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/aas"
            />
        <ImageView
            android:id="@+id/message"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/common_nav_message_black_n"
            />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_58"
        android:background="#fff"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="*"
                android:textColor="#3087ea"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/dp_33"
                android:layout_marginLeft="@dimen/dp_28"
                />
            <EditText
                android:id="@+id/title"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:hint="请输入标题(最多20个字)"
                android:textSize="14sp"
                android:paddingLeft="@dimen/dp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="*"
                android:textColor="#3087ea"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_below="@+id/title"
                />
            <EditText
                android:id="@+id/administrative"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_60"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:hint="请选择就诊科室"
                android:textColorHint="#000"
                android:textSize="14sp"
                android:paddingLeft="@dimen/dp_15"
                />
            <ImageView
                android:id="@+id/administrativelist"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_below="@+id/title"
                android:layout_marginTop="@dimen/dp_38"
                android:src="@drawable/circle_icon_drop_down_n"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="*"
                android:textColor="#3087ea"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_below="@+id/administrative"
                />
            <EditText
                android:id="@+id/vitalsigns"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_60"
                android:layout_below="@+id/administrative"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:hint="请选择主要病症"
                android:textColorHint="#000"
                android:textSize="14sp"
                android:paddingLeft="@dimen/dp_15"
                />
            <ImageView
                android:id="@+id/listofconditions"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_below="@+id/administrative"
                android:layout_marginTop="@dimen/dp_38"
                android:src="@drawable/circle_icon_drop_down_n"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="*"
                android:textColor="#3087ea"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_below="@+id/vitalsigns"
                />
            <EditText
                android:id="@+id/conditionsfordetails"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_150"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:hint="请输入病症详情"
                android:layout_below="@id/vitalsigns"
                android:gravity="top"
                android:textSize="14sp"
                android:paddingLeft="@dimen/dp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不超过300字"
                android:textSize="@dimen/dp_10"
                android:textColor="#3078ea"
                android:layout_below="@+id/vitalsigns"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_140"
                />
            <EditText
                android:id="@+id/malady"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_60"
                android:layout_below="@+id/conditionsfordetails"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:hint="请输入最近一段治疗经历"
                android:textColorHint="#000"
                android:textSize="14sp"
                />
            <EditText
                android:id="@+id/hospital"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_50"
                android:layout_below="@+id/malady"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:hint="请输入医院名称"
                android:textSize="14sp"
                android:background="@drawable/edittext_style"
                android:paddingLeft="@dimen/dp_10"
                />
            <EditText
                android:id="@+id/starttime"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_50"
                android:layout_below="@+id/hospital"
                android:layout_centerHorizontal="true"
                android:hint="请选择开始时间"
                android:textSize="14sp"
                android:background="@drawable/edittext_style"
                android:textColorHint="#000"
                android:paddingLeft="@dimen/dp_10"
                />
            <ImageView
                android:id="@+id/time"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_below="@+id/hospital"
                android:layout_marginTop="@dimen/dp_25"
                android:src="@drawable/circle_icon_drop_down_n"
                />
            <EditText
                android:id="@+id/endtime"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_50"
                android:layout_below="@+id/starttime"
                android:layout_centerHorizontal="true"
                android:hint="请选择结束时间"
                android:textSize="14sp"
                android:background="@drawable/edittext_style"
                android:textColorHint="#000"
                android:paddingLeft="@dimen/dp_10"
                />
            <ImageView
                android:id="@+id/timeisover"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_below="@+id/starttime"
                android:layout_marginTop="@dimen/dp_25"
                android:src="@drawable/circle_icon_drop_down_n"
                />
            <EditText
                android:id="@+id/therapeutic"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_150"
                android:layout_centerHorizontal="true"
                android:hint="请输入治疗过程"
                android:layout_below="@id/endtime"
                android:gravity="top"
                android:textSize="14sp"
                android:background="@drawable/edittext_style"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                />
            <RelativeLayout
                android:id="@+id/relat1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@+id/therapeutic"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#F1F1F1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最多可添加6张图片; 长按为图片排序"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    />
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_below="@id/relat1"
            android:id="@+id/relat2"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imageupload"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relat3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@+id/relat2"
                android:background="#F1F1F1"
                >
               <androidx.recyclerview.widget.RecyclerView
                   android:layout_width="@dimen/dp_120"
                   android:layout_height="@dimen/dp_120"

                   >
               </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提示悬赏额度"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    />
                <com.suke.widget.SwitchButton
                    android:id="@+id/switchbutton"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    app:sb_checked_color="@color/color_btn"
                    app:sb_show_indicator="false"
                    app:sb_checked="false"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relat4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relat3"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/promote_text_advice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提升额度可获得更多的关注，得到更多建议"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_10" />

                <CheckBox
                    android:id="@+id/checkbox_10"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_52"
                    android:layout_below="@id/promote_text_advice"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/promote"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="10H币"
                    android:textColor="@drawable/hb_check"
                    android:textSize="@dimen/sp_16" />

                <CheckBox
                    android:id="@+id/checkbox_20"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_52"
                    android:layout_below="@id/promote_text_advice"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@id/checkbox_10"
                    android:background="@drawable/promote"
                    android:button="@null"
                    android:gravity="center"
                    android:text="20H币"
                    android:textColor="@drawable/hb_check"
                    android:textSize="@dimen/sp_16" />

                <CheckBox
                    android:id="@+id/checkbox_50"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_52"
                    android:layout_below="@id/promote_text_advice"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@id/checkbox_20"
                    android:background="@drawable/promote"
                    android:button="@null"
                    android:gravity="center"
                    android:text="50H币"
                    android:textColor="@drawable/hb_check"
                    android:textSize="@dimen/sp_16" />

                <CheckBox
                    android:id="@+id/checkbox_custom"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_52"
                    android:layout_below="@id/checkbox_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/promote"
                    android:button="@null"
                    android:gravity="center"
                    android:text="自定义"
                    android:textColor="@drawable/hb_check"
                    android:textSize="@dimen/sp_16" />

                <RelativeLayout
                    android:id="@+id/insufficient_balance_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/checkbox_custom"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/text_unenough"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:text="当前H币余额"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/insufficient_balance_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_toRightOf="@+id/text_unenough"
                        android:text="300"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/nuzu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/insufficient_balance_num"
                        android:text=". 不足? 去"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/nuzu"
                        android:text="充值"
                        android:textColor="#3087ea"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@id/relat4"
                android:layout_marginTop="@dimen/dp_20"
                >
                <Button
                    android:id="@+id/publish"
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="@dimen/dp_36"
                    android:text="发表"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:background="@drawable/butt_style"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
