<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dingtao.rrmmp.fragment.PatientsCircleFragment"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:background="#fff"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/ming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="急诊科"
            android:textSize="18sp"
            android:textColor="#3087ea"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/seek"
            android:layout_width="@dimen/dp_210"
            android:layout_height="@dimen/dp_28"
            android:text="请输入病症名和病症关键字"
            android:textSize="15sp"
            android:textColor="#999999"
            android:paddingTop="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_15"
            android:background="@drawable/text_style"
            android:layout_toRightOf="@+id/ming"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_12"
            />
        <ImageView
            android:id="@+id/information"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/common_nav_message_black_n"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:background="#fff"
        >
        <ImageView
            android:id="@+id/headportrait"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/aas"
            />
        <ImageView
            android:id="@+id/message"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/common_nav_message_black_s"
            />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_54"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:layout_marginTop="@dimen/dp_4"
                android:background="#fff"
                android:layout_marginRight="@dimen/dp_75"
                >
            </androidx.recyclerview.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_36"
                android:background="#fff"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_alignParentRight="true"
                >
                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_25"
                    android:background="#999999"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_60"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/imagesearch"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@drawable/common_icon_search_n"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_44"
                android:background="#fff"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
