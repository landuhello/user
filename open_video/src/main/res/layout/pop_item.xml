<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_70"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/image_pop"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/common_button_close_n"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"/>
    <ImageView
        android:id="@+id/pop_tv"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/text_style"/>
    <TextView
        android:id="@+id/pop_liuxia"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_40"
        android:textSize="@dimen/sp_14"
        android:textColor="#ffffff"
        android:gravity="center"
        android:hint="在此留下高见吧！！"
        android:textColorHint="#ffffff"
        />
    <RelativeLayout
        android:id="@+id/pop_rel"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="#333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <EditText
            android:id="@+id/pop_et"
            android:background="#333333"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:hint="快留下你的看法吧"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/pop_send"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_icon_send_n"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
    </RelativeLayout>
</RelativeLayout>
